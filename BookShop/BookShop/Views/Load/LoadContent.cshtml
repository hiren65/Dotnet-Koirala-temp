
@model BookShop.ViewModel.BooksAuthorVM
@using BookShop.Models

@{
    ViewBag.Title = "LoadContent";
}
<style>
    tr {
        background-color: darkgrey;
    }
    td {
        text-align: center;
        width: 150px;
        border: 1px solid black;
    }
</style>
<h2>LoadContent</h2>

<div>
    Name :@Model.customer.CustName
</div>
<div>
    Mobile :@Model.customer.CustMobile
</div>
<div>
    Id :@Model.customer.CustId
</div>
